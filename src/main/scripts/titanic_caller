"""
This script is used to call the TitanicTraining class
and run the training and testing process
"""

#!/usr/bin/env python3
# -*- coding: utf-8 -*-
import os
import argparse
from titanictraining import TitanicTraining

parser = argparse.ArgumentParser(
    description="Please give the path of data directory"
)
parser.add_argument(
    "--data-dir",
    metavar="DIR",
    type=str,
    required=True,
    help="path to the data directory",
)
parser.add_argument(
    "--train-data",
    metavar="FILE",
    type=str,
    required=True,
    help="path to the training data",
)
parser.add_argument(
    "--test-data",
    metavar="FILE",
    type=str,
    required=True,
    help="path to the test data"
)
parser.add_argument(
    "--test-result",
    metavar="FILE",
    type=str,
    required=True,
    help="path to the test result",
)

args = parser.parse_args()

train_data = os.path.join(args.data_dir, args.train_data)
test_data = os.path.join(args.data_dir, args.test_data)
test_result = os.path.join(args.data_dir, args.test_result)

titanic = TitanicTraining(train_data, test_data, test_result)
print(titanic.run())
